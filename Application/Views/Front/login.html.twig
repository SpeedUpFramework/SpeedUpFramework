{% extends "Front/base.html.twig" %}
{% block header %}
    {{ parent() }}

{% endblock %}

{% block title %}Login{% endblock %}

{% block content %}
    <div class="policeDoc">
        <!-- fil d'arianne -->
        <div class="page-intro" style="margin-top: 0px;">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home pr-10"></i><a href="index.html">Speedup</a></li>
                            <li class="active">Login</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- Fin fil -->

        <section class="main-container">

            <div class="container">
                <div class="row">
                    {% for k, v in message %}
        <div class="alert alert-{{ k }}">{{ v }}</div>
                    {% endfor %}
                    <!-- main start -->
                    <!-- ================ -->
                    <div class="main object-non-visible animated object-visible fadeInDownSmall" data-animation-effect="fadeInDownSmall" data-effect-delay="300">
                        <div class="form-block center-block">
                            <h2 class="title">Connexion</h2>
                            <hr>
                            <form class="form-horizontal" action="" method="post">
                                <div class="form-group has-feedback">
                                    <label for="inputUserName" class="col-sm-3 control-label">Identifiant</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="username" id="inputUserName" placeholder="User Name" required="">
                                        <i class="fa fa-user form-control-feedback"></i>
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="inputPassword" class="col-sm-3 control-label">Mot de passe</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" name="mdp" id="inputPassword" placeholder="Password" required="">
                                        <i class="fa fa-lock form-control-feedback"></i>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-8">

                                        <button type="submit" class="btn btn-group btn-default btn-sm">Connexion</button>

                                    </div>
                                </div>
                            </form>
                        </div>
                          </div>
                    <!-- main end -->

                </div>
            </div>
        </section>
    </div>
    <!-- fin Content -->

{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}