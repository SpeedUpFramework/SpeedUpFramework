{% extends "Front/base.html.twig" %}
{% block header %}
    {{ parent() }}

{% endblock %}

{% block title %}Documentation{% endblock %}

{% block content %}
    <div class="policeDoc">
        <!-- fil d'arianne -->
        <div class="page-intro" style="margin-top: 0px;">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home pr-10"></i><a href="index.html">Speedup</a></li>
                            <li class="active">{{ link }}</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- Fin fil -->

        <!-- Content -->
        <section class="main-container" style="margin-top: 0px;">

            <div class="container">
                <div class="row">

                    <!-- sidebar start -->
                    <aside class="col-md-3">

                        {% for k, v in sidebar_categ%}
                            <div class="sidebar">
                                <div class="block clearfix">
                                    <h3 class="title">{{ k }}</h3>
                                    <div class="separator separator-fullwidth"></div>
                                    <nav>
                                        {% for menu in v %}
                                            <ul class="nav nav-pills nav-stacked">

                                                <li><a href="{{ site }}Documentation/{{ menu.slug }}">{{ menu.titre_doc }}</a></li>

                                            </ul>
                                        {% endfor %}
                                    </nav>
                                </div>
                            </div>
                        {% endfor %}
                    </aside>
                    <!-- sidebar end -->

                    <!-- main start -->
                    <!-- ================ -->
                    <div class="main col-md-8 col-md-offset-1">



                        {{ content | raw }}
                    </div>
                    <!-- main end -->

                </div>
            </div>
        </section>
    </div>
    <!-- fin Content -->

{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}