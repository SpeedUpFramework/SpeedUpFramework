{% extends "Front/base.html.twig" %}
{% block header %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
{% endblock %}

{% block title %}Administration{% endblock %}

{% block content %}
    <div class="policeDoc">
        <div class="page-intro" style="margin-top: 0px;">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home pr-10"></i><a href="{{ site }}Admin/doc">Retour à l'administration de la documentation</a></li>
                            <li class="active">Ajouter une doc</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <section class="main-container">

            <div class="container">
                <div class="row">
                    {% for k, v in message %}
                        <div class="alert alert-{{ k }}">{{ v }}</div>
                    {% endfor %}


                    <!-- main start -->
                    <!-- ================ -->
                    <div class="main col-md-12 col-md-offset-1">
                        <div class="row">

                        </div>
                        <form action="" method="post">
                            <div class="form-group">
                                <label for="titre">Titre de la nouvelle doc <div class="asterix">*</div></label>
                                <input type="text" class="form-control" name="titre" id="titre" placeholder="Saisir un titre">
                            </div>
                            <div class="form-group">
                                <label for="categorie">Catégorie <div class="asterix">*</div></label>
                                <select id="categorie" name="categorie" class="form-control">
                                    <option>Selectionnez une catégorie</option>
                                   {% for categ in categs %}
                                       <option value="{{ categ.id_categ_doc }}">{{ categ.titre_categ }}</option>
                                   {% endfor %}
                                </select>
                            </div>

                        <div class="row">



                        </div>
                        <div class="row" id="editor">

                            <div class="col-md-12">

                               <textarea name="content" id="doc-content"></textarea>
                                <div class="form-group">

                                    <input type="submit" class="form-control btn btn-success" value="Envoyer">
                                </div>

                            </div>



                        </div>
                        </form>
                    </div>
                    <!-- main end -->
                </div>
            </div>
        </section>
    </div>
    <!-- fin Content -->

{% endblock %}

{% block footer %}
    {{ parent() }}

    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script>

        var simplemde = new SimpleMDE({ element: $("#doc-content")[0] });

    </script>
{% endblock %}